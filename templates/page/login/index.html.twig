{% extends 'base.html.twig' %}

{% set metaTitle = 'Login' %}

{% block base_content %}
    <div class="card">

        <div class="card-body">
            <h1 class="card-title">{{ 'app.login.title'|trans }}</h1>

            {% if error %}
                {% include 'utilities/alert.html.twig' with {
                    'type': 'danger',
                    'content': error.messageKey|trans(error.messageData, 'security')
                } %}
            {% endif %}

            <form action="{{ path('app.login') }}" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">{{ 'app.general.email'|trans }}:</label>
                    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">{{ 'app.general.password'|trans }}:</label>
                    <input type="password" id="password" class="form-control" name="_password">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"> #}

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">{{ 'app.login.submit'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
